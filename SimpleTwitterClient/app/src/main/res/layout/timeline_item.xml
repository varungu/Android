<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <RelativeLayout
        android:id="@+id/rl_timeline_item_icons"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_timeline_item_retweeted_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/retweet"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:id="@+id/iv_timeline_item_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/iv_timeline_item_retweeted_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_timeline_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/rl_timeline_item_icons"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_timeline_item_retweeted"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp" />
        <RelativeLayout
            android:id="@+id/rl_timeline_item_content_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_timeline_item_retweeted">
            <TextView
                android:id="@+id/tv_timeline_item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_timeline_item_user_screen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/tv_timeline_item_timestamp"
                android:layout_toRightOf="@+id/tv_timeline_item_username"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#64000000"
                android:textSize="15sp"
                android:layout_alignTop="@+id/tv_timeline_item_username"
                android:layout_alignBottom="@+id/tv_timeline_item_username"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_timeline_item_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:layout_alignTop="@+id/tv_timeline_item_user_screen_name"
                android:layout_alignBottom="@+id/tv_timeline_item_user_screen_name"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_timeline_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:layout_below="@+id/rl_timeline_item_content_topbar"
            android:autoLink="all"
            android:linksClickable="true"
            />
    </RelativeLayout>
</RelativeLayout>